{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <!-- En-tête avec breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_clients_list') }}" class="text-decoration-none">Clients</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nouveau client</li>
                </ol>
            </nav>

            <!-- Carte principale -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- En-tête avec gradient -->
                <div class="card-header bg-gradient text-white py-4 border-0" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-3 p-3 me-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-1 fw-bold">Ajouter un nouveau client</h3>
                            <p class="mb-0 opacity-90 small">Remplissez les informations ci-dessous</p>
                        </div>
                    </div>
                </div>

                <!-- Corps du formulaire -->
                <div class="card-body p-4 p-md-5">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                    
                    <!-- Section Informations personnelles -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success mb-3 d-flex align-items-center">
                            <span class="badge bg-success bg-opacity-10 text-success rounded-circle me-2" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">1</span>
                            Informations personnelles
                        </h5>
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                                    {{ form_label(form.nom, 'Nom *', {'label_attr': {'class': ''}}) }}
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                                    {{ form_label(form.prenom, 'Prénom *', {'label_attr': {'class': ''}}) }}
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.prenom) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Contact -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success mb-3 d-flex align-items-center">
                            <span class="badge bg-success bg-opacity-10 text-success rounded-circle me-2" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">2</span>
                            Coordonnées
                        </h5>
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                                    {{ form_label(form.email, 'Email *', {'label_attr': {'class': ''}}) }}
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                                    {{ form_label(form.telephone, 'Téléphone *', {'label_attr': {'class': ''}}) }}
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse', 'rows': '3', 'style': 'min-height: 100px;'}}) }}
                                    {{ form_label(form.adresse, 'Adresse complète *', {'label_attr': {'class': ''}}) }}
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.adresse) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Note informative -->
                    <div class="alert alert-info border-0 bg-info bg-opacity-10 d-flex align-items-start mb-4" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle-fill text-info me-2 mt-1 flex-shrink-0" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
                        </svg>
                        <div>
                            <small>Tous les champs marqués d'un astérisque (*) sont obligatoires. Assurez-vous que l'email est valide pour les communications futures.</small>
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-between pt-3 border-top">
                        <a href="{{ path('app_clients_list') }}" class="btn btn-lg btn-outline-secondary d-flex align-items-center justify-content-center gap-2 px-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                            </svg>
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-lg btn-success d-flex align-items-center justify-content-center gap-2 px-5 shadow">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                            Enregistrer le client
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Message d'aide -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-shield-check me-1" viewBox="0 0 16 16">
                        <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                        <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                    </svg>
                    Vos données sont sécurisées et protégées
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #1b113eff;
    }
    
    .form-floating > .form-control:focus {
        border-color: #1b113eff,
        box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.15);
    }
    
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(68, 27, 109, 0.56) !important;
        transition: all 0.3s ease;
    }
    
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
    
    .card {
        transition: all 0.3s ease;
    }
</style>
{% endblock %}