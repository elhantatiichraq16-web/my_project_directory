{# templates/parametrage/_content.html.twig #}
<div class="parametrage-layout container-fluid py-4">
    <!-- üß≠ En-t√™te principale -->
    <div class="mb-4">
        <nav aria-label="breadcrumb" class="mb-2">
            <ol class="breadcrumb small text-muted mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
                <li class="breadcrumb-item active" aria-current="page">Param√©trage</li>
            </ol>
        </nav>
        <h1 class="h3 mb-1">Param√©trage</h1>
        <p class="text-muted mb-3">
            Activez ou ajustez les options de vos modules m√©tier puis enregistrez vos changements.
        </p>
    </div>

    <!-- üß© Onglets √† gauche + Boutons √† droite -->
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4 flex-wrap gap-3">
        <!-- üîπ Onglets √† gauche -->
        <div class="d-flex align-items-center flex-wrap gap-3">
            <ul class="nav nav-tabs border-0 flex-wrap align-items-center m-0">
                <li class="nav-item">
                    <a class="nav-link active d-flex align-items-center gap-1"
                       id="tab-general" data-bs-toggle="tab" href="#content-general" role="tab">
                        ‚öôÔ∏è <span>G√©n√©ral</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-1"
                       id="tab-options" data-bs-toggle="tab" href="#content-options" role="tab">
                        üõà <span>Options</span>
                    </a>
                </li>
                <li class="nav-item d-flex align-items-center">
                    <a class="nav-link d-flex align-items-center gap-1"
                       id="tab-modeles" data-bs-toggle="tab" href="#content-modeles" role="tab">
                        ‚â° <span>Mod√®les</span>
                    </a>
                    <a href="#" class="text-muted fw-semibold ms-3 small text-decoration-none d-flex align-items-center">
                        <i class="bi bi-arrow-repeat me-1"></i>Export/Import
                    </a>
                </li>
            </ul>
        </div>

        <!-- üîπ Boutons √† droite -->
        <div class="d-flex gap-2 align-items-center">
            <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-short me-1"></i>Retour
            </a>
            <button type="submit" form="{{ form_id|default('parametrage-form') }}" class="btn btn-primary">
                <i class="bi bi-save me-1"></i>Enregistrer
            </button>
        </div>
    </div>

    <!-- üí° Contenu principal -->
    <div class="tab-content">
        <!-- üß± Onglet G√©n√©ral -->
        <div class="tab-pane fade show active" id="content-general" role="tabpanel">
            {% if modules is empty %}
                <div class="alert alert-warning parametrage-empty-state">
                    Aucun param√®tre disponible pour le moment. Ajoutez des donn√©es dans la table
                    <strong>params_ventes</strong> afin d'activer cette page.
                </div>
            {% else %}
                {% if form_action is defined %}
                    <form method="post" id="{{ form_id|default('parametrage-form') }}" action="{{ form_action }}">
                {% else %}
                    <form method="post" id="{{ form_id|default('parametrage-form') }}">
                {% endif %}
                  <input type="hidden" name="_token" value="{{ csrf_token('submit') }}">


                    <!-- üîπ Liste des modules -->
                    <ul class="nav nav-tabs parametrage-module-tabs" role="tablist">
                        {% for module in modules %}
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {{ loop.first ? 'active' : '' }}"
                                        id="module-tab-{{ module.slug }}"
                                        data-bs-toggle="tab"
                                        data-bs-target="#module-pane-{{ module.slug }}"
                                        type="button" role="tab">
                                    {{ module.label }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>

                    <!-- üî∏ Contenu de chaque module -->
                    <div class="tab-content parametrage-module-content pt-4">
                        {% for module in modules %}
                            <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}"
                                 id="module-pane-{{ module.slug }}" role="tabpanel">
                                {% if module.categories is empty %}
                                    <div class="alert alert-light border text-muted">
                                        Aucune cat√©gorie de param√®tre pour ce module.
                                    </div>
                                {% else %}
                                    <div class="row g-4">
                                        {% for category in module.categories %}
                                            <div class="col-12 col-lg-6">
                                                <div class="card parametrage-category-card h-100 shadow-sm border-0">
                                                    <div class="card-header">
                                                        <h2 class="h6 mb-0">{{ category.label }}</h2>
                                                    </div>
                                                    <div class="list-group list-group-flush">
                                                        {% for param in category.params %}
                                                            {% set type = param.type ? param.type|lower : '' %}
                                                            {% set isBoolean = type in ['switch','bool','boolean','checkbox'] %}
                                                            {% set isNumber = type == 'number' %}
                                                            {% set isTextarea = type in ['textarea','text_long'] %}
                                                            {% set rawState = isBoolean ? (param.etat ?? '') : (param.valeur ?? '') %}
                                                            {% set isEnabled = rawState|default('')|lower in ['1','true','on','enabled','oui','yes'] %}

                                                            <div class="list-group-item d-flex justify-content-between align-items-center gap-3">
                                                                <div>
                                                                    <div class="fw-semibold" title="{{ param.cle ?? param.cleLabels ?? param.cle_labels ?? '' }}">
                                                                        {{ param.titre ?? param.cleLabels ?? param.cle_labels ?? param.cle ?? 'Sans titre' }}
                                                                    </div>
                                                                    <small class="text-muted">{{ param.cle ?? '' }}</small>
                                                                </div>

                                                                <div class="parametrage-value text-end d-flex align-items-center gap-2">
                                                                    {% if isBoolean %}
                                                                        <div class="btn-group parametrage-switch" role="group">
                                                                            <input class="btn-check" type="radio"
                                                                                   name="params[{{ param.id }}]"
                                                                                   id="param-{{ param.id }}-yes"
                                                                                   value="on"
                                                                                   {{ isEnabled ? 'checked' }}>
                                                                            <label class="btn btn-sm btn-outline-primary" for="param-{{ param.id }}-yes">Oui</label>
                                                                            <input class="btn-check" type="radio"
                                                                                   name="params[{{ param.id }}]"
                                                                                   id="param-{{ param.id }}-no"
                                                                                   value="off"
                                                                                   {{ not isEnabled ? 'checked' }}>
                                                                            <label class="btn btn-sm btn-outline-secondary" for="param-{{ param.id }}-no">Non</label>
                                                                        </div>
                                                                    {% elseif isNumber %}
                                                                        <input type="number" class="form-control form-control-sm"
                                                                               name="params[{{ param.id }}]"
                                                                               value="{{ param.valeur }}" step="1">
                                                                    {% elseif isTextarea %}
                                                                        <textarea class="form-control form-control-sm" rows="2"
                                                                                  name="params[{{ param.id }}]">{{ param.valeur }}</textarea>
                                                                    {% else %}
                                                                        <input type="text" class="form-control form-control-sm"
                                                                               name="params[{{ param.id }}]"
                                                                               value="{{ param.valeur }}">
                                                                    {% endif %}

                                                                    <button type="button" class="btn btn-sm btn-outline-info"
                                                                            onclick="toggleEditTitre({{ param.id }})">
                                                                        <i class="bi bi-pencil-square"></i>
                                                                    </button>

                                                                    <input type="text"
                                                                           class="form-control form-control-sm d-none"
                                                                           id="titre-input-{{ param.id }}"
                                                                           name="paramsTitre[{{ param.id }}]"
                                                                           value="{{ param.titre ?? param.cleLabels ?? param.cle_labels ?? param.cle ?? '' }}"
                                                                           style="width: 150px;">
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </form>
            {% endif %}
        </div>

        <!-- üß© Autres onglets -->
        <div class="tab-pane fade" id="content-options" role="tabpanel">
            <div class="alert alert-info">Section ‚ÄúOptions‚Äù ‚Äî √† venir.</div>
        </div>
        <div class="tab-pane fade" id="content-modeles" role="tabpanel">
            <div class="alert alert-info">Section ‚ÄúMod√®les‚Äù ‚Äî √† venir.</div>
        </div>
    </div>
</div>

