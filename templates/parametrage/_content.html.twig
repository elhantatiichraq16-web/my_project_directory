<script>
// ‚úÖ Toggle instantan√© pour les switches Oui/Non
document.addEventListener('DOMContentLoaded', function() {
    initToggleSwitches();
});

// ‚úÖ Fonction r√©utilisable pour initialiser les switches (marche aussi dans les modales)
function initToggleSwitches() {
    const switches = document.querySelectorAll('.parametrage-switch input[type="radio"]');
    
    switches.forEach(radio => {
        // ‚úÖ Retirer les anciens listeners pour √©viter les doublons
        radio.removeEventListener('change', handleToggleChange);
        // ‚úÖ Ajouter le listener
        radio.addEventListener('change', handleToggleChange);
    });
}

function handleToggleChange(event) {
    const radio = event.target;
    const paramId = radio.name.match(/params\[(\d+)\]/)?.[1];
    
    if (!paramId) {
        console.warn('‚ùå ID du param√®tre introuvable');
        return;
    }
    
    const newValue = radio.value; // 'on' ou 'off'
    
    // ‚úÖ Afficher un indicateur de chargement
    const switchGroup = radio.closest('.parametrage-switch');
    const originalHTML = switchGroup.innerHTML;
    switchGroup.style.opacity = '0.6';
    switchGroup.style.pointerEvents = 'none';
    
    // ‚úÖ Envoyer la requ√™te AJAX
       fetch(`/parametrage/toggle/${paramId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest',
            'X-CSRF-TOKEN': csrfTokenToggle
        },
        body: JSON.stringify({ value: newValue })
    })

    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('‚úÖ Param√®tre mis √† jour:', data);
            
            // ‚úÖ Animation de succ√®s
            switchGroup.style.opacity = '1';
            switchGroup.style.pointerEvents = 'auto';
            
            // ‚úÖ Flash visuel
            switchGroup.style.transition = 'background-color 0.3s';
            switchGroup.style.backgroundColor = '#d4edda';
            setTimeout(() => {
                switchGroup.style.backgroundColor = '';
            }, 600);
            
        } else {
            console.error('‚ùå Erreur:', data.message);
            alert('Erreur lors de la mise √† jour: ' + (data.message || 'Erreur inconnue'));
            
            // ‚úÖ Restaurer l'√©tat pr√©c√©dent
            switchGroup.innerHTML = originalHTML;
            switchGroup.style.opacity = '1';
            switchGroup.style.pointerEvents = 'auto';
            initToggleSwitches(); // R√©-initialiser les listeners
        }
    })
    .catch(error => {
        console.error('‚ùå Erreur r√©seau:', error);
        alert('Erreur de connexion au serveur');
        
        // ‚úÖ Restaurer l'√©tat pr√©c√©dent
        switchGroup.innerHTML = originalHTML;
        switchGroup.style.opacity = '1';
        switchGroup.style.pointerEvents = 'auto';
        initToggleSwitches();
    });
}

// ‚úÖ R√©initialiser les switches quand une modale s'ouvre
document.addEventListener('shown.bs.modal', function(event) {
    console.log('üîÑ Modale ouverte, r√©initialisation des switches...');
    setTimeout(() => {
        initToggleSwitches();
    }, 100);
});

// ‚úÖ Pour les modales charg√©es dynamiquement via AJAX
const observer = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
        if (mutation.addedNodes.length > 0) {
            mutation.addedNodes.forEach(function(node) {
                if (node.nodeType === 1 && node.classList && node.classList.contains('modal')) {
                    console.log('üîÑ Nouvelle modale d√©tect√©e, initialisation...');
                    setTimeout(() => {
                        initToggleSwitches();
                    }, 100);
                }
            });
        }
    });
});

observer.observe(document.body, {
    childList: true,
    subtree: true
});

// ‚úÖ Fonction pour le bouton d'√©dition de titre
function toggleEditTitre(id) {
    const input = document.getElementById('titre-input-' + id);
    if (input) {
        input.classList.toggle('d-none');
        if (!input.classList.contains('d-none')) {
            input.focus();
        }
    }
}
</script>

